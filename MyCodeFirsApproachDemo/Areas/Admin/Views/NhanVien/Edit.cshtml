@model AutomobileLibrary.DataAccess.NhanVien

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Chỉnh Sửa</h1>

<h4>Nhân Viên</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        
            @using (Html.BeginForm("Edit", "NhanVien", FormMethod.Post)){
                @Html.HiddenFor(model=>model.MaNhanVien)
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    @Html.EditorFor(model=>model.TenNhanVien,new {htmlAttributes= new{@class="form-control"} })
                    <span asp-validation-for="MaNhanVien" class="text-danger"></span>
                </div>
            
                @* <div class="form-group form-check">
                    @Html.EditorFor(model=>model.GioiTinh,new {htmlAttributes= new{@class="form-control"} })
                @Html.CheckBoxFor(model=>model.GioiTinh, new {@class="check-input"}) Nam
                    <span asp-validation-for="GioiTinh" class="text-danger"></span>
                </div> *@
                <div class="form-group">
                    <label>@Html.DisplayNameFor(model => model.GioiTinh)</label>
                    <div>
                        @Html.RadioButtonFor(model => model.GioiTinh, true, new { id = "nam" })
                        <label for="nam">Nam</label>
                        @Html.RadioButtonFor(model => model.GioiTinh, false, new { id = "nu" })
                        <label for="nu">Nữ</label>
                        <span asp-validation-for="GioiTinh" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    @Html.EditorFor(model=>model.DiaChi,new {htmlAttributes= new{@class="form-control"} })
                    <span asp-validation-for="DiaChi" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @Html.EditorFor(model=>model.DienThoai,new {htmlAttributes= new{@class="form-control"} })
                    <span asp-validation-for="DienThoai" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @Html.EditorFor(model=>model.NgaySinh,new {htmlAttributes= new{@class="form-control"} })
                    <span asp-validation-for="NgaySinh" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>

            
            }
        
    </div>
</div>

<div>
    @Html.ActionLink("Quay Lại","Index", "NhanVien", null, new {@class="btn btn-danger"} )
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
